{
  "name": "bun-plugin-markdown",
  "type": "module",
  "version": "0.0.0",
  "description": "A Bun loader for Frontmatter Markdown files.",
  "author": "Chris Breuer <chris@stacksjs.org>",
  "license": "MIT",
  "homepage": "https://github.com/stacksjs/bun-plugin-markdown#readme",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/stacksjs/bun-plugin-markdown.git"
  },
  "bugs": {
    "url": "https://github.com/stacksjs/bun-plugin-markdown/issues"
  },
  "keywords": ["typescript", "bun", "loader", "markdown", "frontmatter"],
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "import": "./dist/index.js"
    },
    "./plugin": {
      "types": "./dist/plugin.d.ts",
      "import": "./dist/plugin.js"
    },
    "./*": {
      "import": "./dist/*"
    }
  },
  "module": "./dist/index.js",
  "types": "./dist/index.d.ts",
  "bin": {
    "bin-name": "./dist/bin/cli.js"
  },
  "files": ["README.md", "dist"],
  "scripts": {
    "build": "bun --bun build.ts",
    "fresh": "bunx rimraf node_modules/ bun.lock && bun i",
    "prepublishOnly": "bun --bun run build",
    "test": "bun test",
    "lint": "bunx --bun eslint .",
    "lint:fix": "bunx --bun eslint . --fix",
    "changelog": "bunx logsmith --verbose",
    "changelog:generate": "bunx logsmith --output CHANGELOG.md",
    "release": "bun run changelog:generate && bunx bumpx prompt --recursive",
    "postinstall": "bunx git-hooks",
    "dev:docs": "bun --bun vitepress dev docs",
    "build:docs": "bun --bun vitepress build docs",
    "preview:docs": "bun --bun vitepress preview docs",
    "typecheck": "bun --bun tsc --noEmit",
    "fullstack": "bun run examples/fullstack-server.ts"
  },
  "peerDependencies": {
    "@babel/core": "^7.28.3",
    "@babel/preset-react": "^7.27.1",
    "@vue/component-compiler-utils": "^3.3.0",
    "react": "^19.1.1",
    "vue-template-compiler": "^2.7.16"
  },
  "peerDependenciesMeta": {
    "@babel/core": {
      "optional": true
    },
    "@babel/preset-react": {
      "optional": true
    },
    "@vue/component-compiler-utils": {
      "optional": true
    },
    "react": {
      "optional": true
    },
    "vue-template-compiler": {
      "optional": true
    }
  },
  "dependencies": {
    "front-matter": "^4.0.2",
    "markdown-it": "^14.1.0"
  },
  "devDependencies": {
    "@stacksjs/bumpx": "^0.1.17",
    "@stacksjs/eslint-config": "^4.10.2-beta.3",
    "@stacksjs/gitlint": "^0.1.5",
    "@stacksjs/logsmith": "^0.1.8",
    "@types/bun": "^1.2.20",
    "@types/markdown-it": "^14.1.2",
    "@types/react": "^19.1.11",
    "buddy-bot": "^0.8.8",
    "bun-git-hooks": "^0.2.19",
    "bun-plugin-dtsx": "^0.21.12",
    "bunfig": "^0.14.1",
    "typescript": "^5.9.2"
  },
  "overrides": {
    "unconfig": "0.3.10"
  },
  "git-hooks": {
    "pre-commit": {
      "staged-lint": {
        "*.{js,ts,json,yaml,yml,md}": "bun lint:fix"
      }
    },
    "commit-msg": "bunx gitlint --edit $1"
  }
}
